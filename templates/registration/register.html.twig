{% extends 'base.html.twig' %}

{% block title %}Symfony Ad - Register
{% endblock %}

{% block stylesheets %}
	<style>
		a {
			text-decoration: none;
		}
		.login-page {
			width: 100%;
			height: 100vh;
			display: inline-block;
			display: flex;
			align-items: center;
		}
		.form-right i {
			font-size: 90px;
		}
		.bg-specialprimary {
			background: #396afc;
			background: -webkit-linear-gradient(to right, #2948ff, #396afc);
			background: linear-gradient(to right, #2948ff, #396afc);
		}
	</style>
{% endblock %}


{% block body %}


	<div class="login-page bg-light">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 offset-lg-1">
					<h3 class="mb-3">Register Now</h3>
					<div class="bg-white shadow rounded">
						<div class="row">
							<div class="col-md-7 pe-0 mb-5">
								<div class="form-left h-100 py-5 px-5">
									{{ form_start(registrationForm, {'attr': {"novalidate": "novalidate"}})}}
									<div class="col-12 mb-3">
										<label class="my-2">Email<span class="text-danger">*</span>
										</label>
										<div class="input-group">
											<div class="input-group-text">
												<i class="fas fa-user-edit"></i>
											</div>
											{{ form_widget(registrationForm.email) }}
										</div>
										<span class="text-muted" style='color:#dc3545;'>
											{{ form_errors(registrationForm.email) }}
										</span>
									</div>



									<div class="col-12">
										<label class="my-2">Password<span class="text-danger">*</span>
										</label>
										<div class="input-group">
											<div class="input-group-text">
												<i class="fas fa-unlock-alt"></i>
											</div>
											{{ form_widget(registrationForm.plainPassword, {label: 'Password'}) }}
										</div>
										<span class="text-muted" style='color:#dc3545;'>
											{{ form_errors(registrationForm.plainPassword) }}
										</span>

									</div>

									<div class="col-sm-12 mb-5">
										<a href="{{path('app_login')}}" class="float-end text-primary">Already have an account?</a>
									</div>

									<div class="col-12">
										<button type="submit" class="btn btn-primary px-4 float-end mt-4">Register</button>
									</div>
									{{ form_end(registrationForm) }}
								</div>
							</div>
							<div class="col-md-5 ps-0 d-none d-md-block">
								<div class="form-right h-100 bg-specialprimary text-white text-center pt-5">
									<i class="fas fa-user-plus  mt-5 pt-5"></i>
									<h2 class="fs-1">Registration Page</h2>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
